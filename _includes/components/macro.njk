{% macro sommaire(liste) %}
    <ul class="df fw-w sommaire">
        {% for item in liste %}
            <li class="df jc-c ai-c sommaire__item">
                <a href="#{{ item | slug }}">
                    {{ item }}
                </a>
            </li>
         {% endfor %}
    </ul>
{% endmacro %}




{% macro h2(titre, titreSurcharger) %}
    <h2 id="{{ titre | slug  }}">
        {% if titreSurcharger %}
            {{ titreSurcharger | safe }}
        {% else %}
            {{ titre | safe }}
        {% endif %}
    </h2>
{% endmacro %}




{% macro texteEtVisuel(typeHeroBanner,titre,contenu,srcImage,altImage,hrefLien,labelLien,margetop,inverseBloc) %}
    <div class="df fd-c fd-r--large ai-fs ai-c--large gap2{% if margetop %} mt{% endif %}">
        <img src="{{srcImage}}" alt="{{altImage}}" class="max-w-50--large{% if inverseBloc %} order-1--large{% endif %}">
        <div class="df fd-c gap">
            {% if titre %}
                <h3 class="text-typo2 text-size1 text-fin">&laquo; {{titre}} &raquo;</h3>
            {% endif %}
            <div{% if typeHeroBanner %} class="text-size2"{% endif %}>
                {{contenu | safe}}
            </div>
            {% if hrefLien and labelLien %}
                <a href="{{hrefLien}}" rel="external">{{labelLien}}</a>
            {% endif %}
        </div>
    </div>
{% endmacro %}