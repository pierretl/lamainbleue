{% macro sommaire(liste) %}
    <ul class="df fw-w sommaire">
        {% for item in liste %}
            <li class="df jc-c ai-c sommaire__item">
                <a href="#{{ item | slug }}">
                    {{ item }}
                </a>
            </li>
         {% endfor %}
    </ul>
{% endmacro %}




{% macro h2(titre, titreSurcharger) %}
    <h2 id="{{ titre | slug  }}">
        {% if titreSurcharger %}
            {{ titreSurcharger | safe }}
        {% else %}
            {{ titre | safe }}
        {% endif %}
    </h2>
{% endmacro %}




{% macro texteEtVisuel(typeHeroBanner,titre,contenu,srcImage,altImage,hrefLien,labelLien,margetop,inverseBloc) %}
    <div class="df fd-c fd-r--large ai-fs ai-c--large gap2{% if margetop %} mt{% endif %}">
        <img src="{{srcImage}}" alt="{{altImage}}" class="w-50--large{% if inverseBloc %} order-1--large{% endif %}">
        <div class="df fd-c gap w-50--large">
            {% if titre %}
                {% if typeHeroBanner %}
                    <h2 class="text-typo2 text-size1 text-fin">&laquo; {{titre}} &raquo;</h2>
                {% else %}
                    <h3 class="text-typo2 text-size1 text-fin">&laquo; {{titre}} &raquo;</h3>
                {% endif %}
            {% endif %}
            <div{% if typeHeroBanner %} class="text-size2"{% endif %}>
                {{contenu | safe}}
            </div>
            {% if hrefLien and labelLien %}
                <a href="{{hrefLien}}" rel="external">{{labelLien}}</a>
            {% endif %}
        </div>
    </div>
{% endmacro %}




{% macro cartes(liste) %}
    <ul class="reset df jc-sb gap2 carte js_scroll-x">
        {% for item in liste %}
            <li class="fg-1 df fd-c gap-2">
                <img src="https://via.placeholder.com/400x100/375063/FFFFFF/?text=Picto" alt="">
                <div class="df fd-c gap">
                    <h4 class="text-typo2 text-size1 text-fin mb-0">{{ item.titre }}</h4>
                    <p>
                        {{ item.contenu | safe }}
                    </p>
                    {% if item.hrefInscription %}
                        <p class="text-center">
                            {% if item.hrefInscription %}
                                <a href="{{ item.hrefInscription | safe }}" target="_blank" rel="external">
                                    {% if item.labelLien %}
                                        {{ item.labelLien }}
                                    {% else %}
                                        Inscription
                                    {% endif %}
                                </a>
                            {% endif %}
                        </p>
                    {% endif %}
                </div>
            </li>
         {% endfor %}
    </ul>
{% endmacro %}