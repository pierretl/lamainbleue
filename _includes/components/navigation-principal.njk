{% set navPages = collections.all | eleventyNavigation %}

<ul class="reset df fd-c fd-r--large fw-w jc-c gap">

    {%- for entry in navPages %}
        <li>
            {% if entry.url == page.url %}
                <span class="text-size1 text-typo2 text-color3">
                    {{ entry.title }}
                </span>
            {% else %}
                <a class="text-size1 text-typo2" href="{{ entry.url | url }}">
                    {{ entry.title }}
                </a>
            {% endif %}
            
        </li>
    {%- endfor %}

</ul>