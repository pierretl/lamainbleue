<!-- capture the JS content as a Nunjucks variable -->
{% set js %}
	{% include "js/prefers-color-scheme.js" %}
	{% include "js/menu-burger.js" %}
{% endset %}

<!-- feed it through our jsmin filter to minify -->
<script>

	//commun dans chaque page
	{{ js | jsmin | safe }} 

	//spécifique à un composant
	{% for item in scriptsJs %}

		{% if item == 'horizontalScroll' %}

				{% set horizontalScroll %}
					{% include "js/horizontal-scroll.js" %}
				{% endset %}
				{{ horizontalScroll | jsmin | safe }}

		{% elif  item == 'basculeVisibilite' %}

				{% set basculeVisibilite %}
					{% include "js/panneau-depliant.js" %}
					{% include "js/bascule-visibilite.js" %}
				{% endset %}
				{{ basculeVisibilite | jsmin | safe }}

		{% endif %}

	{% endfor %}

</script>