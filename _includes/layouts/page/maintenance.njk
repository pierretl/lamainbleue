---
layout: layouts/base.njk
layoutMainClass : df ai-c jc-c accueil__conteneur
noHeader: true
---

<div class="df ai-c">

    <img class="accueil__img" src="../images/design/main.png" alt="">
    
    <section class="df fd-c ai-c">

        <h1 class="text-center maintenance__titre">{{ metadata.title }}</h1>
        <p class="text-center maintenance__ligne1">{{intro1}}</p>
        <p class="text-center maintenance__ligne2">
            <span aria-hidden="true">~</span>
            &nbsp;&nbsp;<em>{{intro2}}</em>&nbsp;&nbsp;
            <span aria-hidden="true">~</span>
        </p>

        <ul class="reset df maintenance__liste">
            <li>Massage</li>
            <li>Yoga</li>
            <li>Art</li>
        </ul>

        <p class="maintenance__tilde" aria-hidden="true">
            ~
        </p>

        <p class="maintenance__texte">
            {{contactIntro}}
            <br>
            {{infoTelephone}} : <a href="tel:{{telephoneHref}}">{{telephone}}</a>
            <br>
            {{infoMail}} : <a href="mailto:{{mail}}">{{mail}}</a>
        </p>

        {% include "components/btn-color-scheme.njk" %}
        
    </section>

</div>